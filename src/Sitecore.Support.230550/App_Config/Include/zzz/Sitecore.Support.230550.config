<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/" xmlns:set="http://www.sitecore.net/xmlconfig/set/" xmlns:role="http://www.sitecore.net/xmlconfig/role/">
  <sitecore role:require="Processing or Standalone">
    <xdb.referenceData.service>
      <definitionCache type="Sitecore.Support.Xdb.ReferenceData.Service.Cache.MemoryDefinitionCache, Sitecore.Support.230550" patch:instead="definitionCache[@type='Sitecore.Xdb.ReferenceData.Service.Cache.MemoryDefinitionCache, Sitecore.Xdb.ReferenceData.Service']">
        <!-- entryLifetime: The lifetime of entries in the cache, given as a TimeSpan -->
        <param name="entryLifetime">00:00:30</param>
      </definitionCache>
    </xdb.referenceData.service>
  </sitecore>
</configuration>